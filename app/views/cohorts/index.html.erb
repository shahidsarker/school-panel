<p id="notice"><%= notice %></p>

<h1>Cohorts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Course</th>
      <th>Start</th>
      <th>End</th>
      <th>Instructor</th>

      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.name %></td>
        <td><%= cohort.course.name %></td>
        <td><%= cohort.start.strftime('%D') %></td>
        <td><%= cohort.end.strftime('%D') %></td>
        <td><%= cohort.instructor.full_name %></td>
        <td><%= cohort.created_at %></td>
        <td><%= cohort.updated_at %></td>
        <td><%= link_to 'Show', cohort %></td>
        <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

