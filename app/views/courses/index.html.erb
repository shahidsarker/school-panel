<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Hours</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Cohorts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to "#{course.name}", course %></td>
        <td><%= course.hours %></td>
        <td><%= course.created_at %></td>
        <td><%= course.updated_at %></td>
        <td>
          <%= "#{course.cohorts.length} cohorts" %>
          <ul>
            <% course.cohorts.each do |cohort| %>
            <li>
              <%= link_to abbreviate(cohort.course.name), cohort.course, :class => 'badge badge-primary' %>
              <%= link_to "#{cohort.name}", cohort %> -
              <%= link_to cohort.instructor.full_name, cohort.instructor %>
            </li>
            <% end %>

          </ul>

        </td>
        <td></td>
        <td><%= link_to 'Edit', edit_course_path(course),class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Destroy', course,class: 'btn btn-danger' , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: 'btn btn-success'  %>
